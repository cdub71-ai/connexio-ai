# Little Horse Configuration for Connexio.ai Development

# Kafka Configuration
LH_KAFKA_BOOTSTRAP_SERVERS=kafka:29092
LH_KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# Cluster Configuration  
LH_CLUSTER_ID=connexio-cluster
LH_INSTANCE_ID=connexio-lh-server-1

# Network Configuration
LH_ADVERTISED_LISTENERS=PLAIN://localhost:2023
LH_LISTENERS=PLAIN://0.0.0.0:2023

# Health Service
LH_HEALTH_SERVICE_PORT=9090
LH_HEALTH_SERVICE_HOST=0.0.0.0

# Internal Configuration
LH_INTERNAL_BIND_PORT=2011
LH_INTERNAL_ADVERTISED_HOST=littlehorse
LH_INTERNAL_ADVERTISED_PORT=2011

# State Store Configuration
LH_STATE_DIR=/opt/littlehorse/data
LH_ROCKSDB_CACHE_SIZE=134217728

# Logging
LH_LOG_LEVEL=INFO
LH_LOG_APPENDER=CONSOLE

# Performance Tuning for Development
LH_NUM_STREAM_THREADS=2
LH_NUM_WARMUP_REPLICAS=1
LH_COMMIT_INTERVAL_MS=100
LH_SESSION_TIMEOUT_MS=10000

# Security (disabled for local development)
LH_AUTH_ENABLED=false

# Metrics
LH_SHOULD_CREATE_TOPICS=true
LH_REPLICATION_FACTOR=1