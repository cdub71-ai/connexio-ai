{
  "display_information": {
    "name": "Connexio File Validator",
    "description": "AI-powered CSV file validation and data quality analysis",
    "background_color": "#2c3e50"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": true,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Connexio File Validator",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "files:read",
        "files:write",
        "chat:write",
        "chat:write.public",
        "app_mentions:read",
        "commands"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://connexio-file-bot.fly.dev/slack/events",
      "bot_events": [
        "file_shared",
        "app_mention"
      ]
    },
    "interactive_components": {
      "is_enabled": true,
      "request_url": "https://connexio-file-bot.fly.dev/slack/interactive"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}