# Connexio AI Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# REQUIRED API KEYS AND CREDENTIALS
# =============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# Slack Integration - REPLACE THESE WITH YOUR ACTUAL VALUES
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here
# Add your SureShot Slack team ID for authentication
SLACK_ALLOWED_TEAMS=T1234567890

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_MESSAGING_SERVICE_SID=your-twilio-messaging-service-sid-here

# SureShot Eloqua Integration
SURESHOT_API_KEY=your-sureshot-api-key-here
SURESHOT_ELOQUA_INSTANCE=your-eloqua-instance-name-here
SURESHOT_ELOQUA_USER=your-eloqua-username-here
SURESHOT_ELOQUA_PASSWORD=your-eloqua-password-here

# Data Enrichment Services
APOLLO_API_KEY=your-apollo-api-key-here
LEADSPACE_API_KEY=your-leadspace-api-key-here
LEADSPACE_CUSTOMER_ID=your-leadspace-customer-id-here

# Microsoft Teams Integration (Optional)
MICROSOFT_APP_ID=your-microsoft-app-id-here
MICROSOFT_APP_PASSWORD=your-microsoft-app-password-here
MICROSOFT_APP_TENANT_ID=your-microsoft-tenant-id-here

# =============================================================================
# GENERATED SECRETS (Leave empty - will be auto-generated during deployment)
# =============================================================================

# Database and Infrastructure Secrets (auto-generated)
POSTGRES_PASSWORD=
POSTGRES_REPLICATION_PASSWORD=
REDIS_PASSWORD=
JWT_SECRET=
ENCRYPTION_KEY=
ADMIN_PASSWORD=

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Fly.io Organization
FLY_ORG=connexio-ai

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Feature Flags
ENABLE_AUTOSCALING=true
ENABLE_MONITORING=true
ENABLE_DATA_ENRICHMENT=true
ENABLE_REALTIME_SYNC=true